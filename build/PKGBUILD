pkgname=parch-welcome
destname="/"
pkgver=1
pkgrel=0
pkgdesc='Parch dorood (/do-rood/, درود, pronunciation) which is Persian word for "Greetings", is a welcome app in the Parch distribution.'
arch=('x86_64')
url="https://parchlinux.ir"
license=('GPL')
makedepends=("tar")
depends=("python-pyqt6")
optdepends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=("${pkgname}.tar.gz")
sha256sums=('SKIP')
prepare() {
	tar -cvf - parch-welcome | gzip -c > parch-welcome.tar.gz
}
package() {
	prepare
 	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${pkgname}${destname}/* ${pkgdir}${destname}
}
